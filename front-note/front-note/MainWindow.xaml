<Window x:Class="front_note.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <ListBox x:Name="NotesListBox" Margin="10" DisplayMemberPath="Title" SelectionChanged="NotesListBox_SelectionChanged"/>
        <TextBox x:Name="TitleTextBox" Margin="10,220,10,0" VerticalAlignment="Top" Height="30"/>
        <TextBox x:Name="ContentTextBox" Margin="10,260,10,0" VerticalAlignment="Top" Height="50" TextWrapping="Wrap" />
        <Button x:Name="SaveButton" Content="Save" Margin="10,320,10,10" VerticalAlignment="Bottom" Click="SaveButton_Click"/>
        <Button x:Name="DeleteButton" Content="Delete" Margin="90,320,10,10" VerticalAlignment="Bottom" Click="DeleteButton_Click" IsEnabled="False"/>
    </Grid>
</Window>
